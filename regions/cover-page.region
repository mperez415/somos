<!doctype html>
<html class="no-js" lang="en">

<head>
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">

  <!-- include inline critical css -->
  {@|apply critical.block}

  <!-- include system scripts, page meta, and header code injection -->
  {squarespace-headers}

</head>

<body id="{squarespace.page-id}" class="cover-page {squarespace.page-classes}">

  <!-- site container -->
  <div class="site-container animated fadeIn">

    <header class="header">
      <div class="container">
        <div class="row">
          <div class="col-xs-12">
            <nav id="cover-page-nav">
              <!-- left side of nav -->
              <div class="left">
                <!-- logo -->
                <a href="/"data-content-field="site-title" class="cover-page-logo-wrapper">
                  <div id="siteTitle" class="cover-page-logo">
                    {website.siteTitle}
                  </div>
                </a>
              </div>
              <!-- end left side of nav -->
              <!-- right side of nav -->
              <div class="right">
                <!-- give link -->
                <div id="give-wrapper">
                  <a href="https://give.church/rl3e62m" target="_blank">
                    <div class="cust-button">Give</div>
                  </a>
                </div>
              </div>
              <!-- end right side of nav -->
            </nav>
          </div>
        </div>
      </div>
    </header>


    <!-- cms content injection point -->
    <main id="main-content" class="content-container animated fadeIn" role="main" data-content-field="main-content">
      <div class="container">
        <div class="row">
          <div class="col-xs-12">
            <div class="content-wrapper">
              {squarespace.main-content}
            </div>
          </div>
        </div>
      </div>
      <!-- overlay -->
      <div class="overlay fill-parent"></div>
      <!-- plus swatch pattern -->
      <div class="plus-swatch"></div>
      <!-- background images -->
      <ul id="background-wrapper" class="fill-parent">
        <squarespace:query collection="cover-page-images" limit="99">
          {.repeated section items}
          <li class="slide">
            <div class="cover-image fill-parent content-fill">
              {.main-image?}<img {@|image-meta}/>{.end}
            </div>
          </li>
          {.end}
        </squarespace:query>
      </ul>
      <!-- push div for sticky footer effect -->
      <div class="push"></div>
  </main>


  <!--Footer with open block field -->
  <footer class="footer">
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <squarespace:block-field id="cover-page-footer" columns="12" />
        </div>
      </div>
    </div>
  </footer>

  </div>
  <!-- end site container -->

  <!-- combo and minify scripts when not logged in -->
  <squarespace:script src="site.js" combo="false" />
  <squarespace:script src="cover-page.js" combo="false" />

  <!-- other scripts, and footer code injection -->
  {squarespace-footers}

</body>

</html>
